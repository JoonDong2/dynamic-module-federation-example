{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib", // lib폴더에 ts 타입 속성을 빌드한다.
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "@types",
    "index.ts",
    "src/ReactDynamicModuleFederationPlugin.js",
    "src/ContainerEntryDependency.js"
  ],
  "exclude": ["node_modules", "build", "lib", "example", "rollup.config.js"]
}
